<div class="users_index">
	<%if flash[:notice]%>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
	<%end%>
	<%= render 'books/list',user: @user,book: @book %>
	<div class="col-lg-8">
		<h3>Users</h3>
		<table class="table table-striped">
				<thead>
					<th>image</th>
					<th>name</th>
					<th></th>
				</thead>
			<% @users.each do |user| %>
				<tbody>
					<% if user.profile_image.present? %>
						<td><%=attachment_image_tag  user, :profile_image%></td>
					<%else%>
						<td><img src='noimage.jpg'></td>
					<%end%>
					<td>
						<%=link_to user_path(user.id) do %>
						<%=user.name%>
						<%end%>
					</td>
					<td>
						<%=link_to user_path(user.id) do %>Show<%end%>
					</td>
				</tbody>
			<% end %>
		</table>
	</div>
</div>