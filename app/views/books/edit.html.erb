<div class="content">
	<h2>Book edit</h2>
  <%= form_for(@book,url: book_path(@book)) do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
    </div>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body, autofocus: true, autocomplete: "body" %>
    </div>
    <div class="actions">
      <%= f.submit "Update Book" ,class:"btn btn-default" %>
    </div>
  <% end %>
</div>